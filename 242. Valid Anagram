class Solution {
public:
    bool isAnagram(string s, string t) {
        if (s.size() != t.size()) 
            return false;

        for (int i = 0; i < s.size(); i++) 
        {
            int found = t.find(s[i]);
            if (found != string::npos)
            {
                t.erase(found, 1); 
            }
            else 
            {
                return false;
            }    
        }
        return true;
    }
};
