class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {

        int rows = matrix.size();
        int cols = matrix[0].size();
        int start = 0;
        int end  = rows*cols-1;

        while(start<=end){
            int mid = start + (end-start)/2;
            int midVal = matrix[mid / cols][mid % cols];
            if(midVal == target){
                return true;
            }
            else if(midVal<target){
                start = mid+1;
            }
            else if(midVal>target){
                end = mid-1;
            }
        }
        return false;
    }
};
