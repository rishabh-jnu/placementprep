class Solution {
public:
    ListNode* mergeKLists(vector<ListNode*>& lists) {
        int size = lists.size();
        vector<int> result;

        for(int i=0; i<size; i++){
            ListNode* head = lists[i];
            while(head != nullptr){
                result.push_back(head->val);
                head = head->next;
            }
        }

        sort(result.begin(), result.end());
        
        ListNode* temp = new ListNode(-1);
        ListNode* curr = temp;
        for(int v : result){
            curr->next = new ListNode(v);
            curr = curr->next;
        }
        return temp->next;
    }
};
