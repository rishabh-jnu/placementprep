class Solution {
public:
    string minWindow(string s, string t) {
        int n = s.size();
        int m = t.size();
        if (m > n) return "";

        int left = 0, right = 0;
        int count = 0;
        int startIndex = -1;
        int minLen = INT_MAX;
        int hash[256] = {0};

        for (int i = 0; i < m; i++) {
            hash[t[i]]++;
        }

        while (right < n) {
            if (hash[s[right]] > 0) {
                count++;
            }

            hash[s[right]]--;
            right++;

            while (count == m) {
                if (right - left < minLen) {
                    minLen = right - left;
                    startIndex = left;
                }

                hash[s[left]]++;
                if (hash[s[left]] > 0) {
                    count--;
                }
                left++;
            }
        }
        return (startIndex == -1) ? "" : s.substr(startIndex, minLen);
    }
};
