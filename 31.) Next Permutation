class Solution {
public:
    void nextPermutation(vector<int>& nums) {
        // next_permutation(nums.begin(), nums.end()); not preferred in interviews

        int pivat = -1;
        int size = nums.size();
        
        //for pivat
        for(int i=size-2; i>=0; i--){
            if(nums[i] < nums[i+1]){
                pivat = i;
                break;
            }
        }
        if(pivat == -1){
            reverse(nums.begin(), nums.end());
            return;
        }

        //pivat se just bit number ko pivat se swap for just grater num overall
        for(int i=size-1; i>pivat; i--){
            if(nums[i]>nums[pivat]){
            swap(nums[i], nums[pivat]);
            break;
            }
        }


        //for pivat ke bad wale nums se smaller banana
        // reverse(nums.begin + pivat+1 , nms.end()); may for below stl
        int i = pivat+1, j = size-1;
        while(i<=j){
            swap(nums[i++], nums[j--]);
        }
    }
};
